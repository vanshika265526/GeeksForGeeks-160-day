class Solution:
    def rightRotate(self, arr, d):
        n = len(arr)
        d = d % n   # handle cases like d > n

        
        def reverse(arr, l, r):
            while l < r:
                arr[l], arr[r] = arr[r], arr[l]
                l += 1
                r -= 1

        reverse(arr, 0, n - 1)
        reverse(arr, 0, d - 1)
        reverse(arr, d, n - 1)
